- address = info.address
- email = info.emailContact
- phone = info.phone
- socials = info.social

footer.site-footer.background--white.check-anim data-datocms-noindex=true 
  .wrap

    .flex 
      .flex__item.lap-4-12

        .site-footer__title Contatti & Indirizzo
        .site-footer__text = address
        = link_to phone,
          "tel:#{phone}",
          class: "site-footer__text"
        = link_to email,
          "mailto:#{email}",
          class: "site-footer__text"


      .flex__item.lap-3-12
        .site-footer__title Social

        = Enum.map socials, fn social ->
          = link_to social.title,
            social.link,
            target: "_blank",
            class: "site-footer__text"        

      .flex__item.lap-3-12
        .site-footer__title Newsletter


